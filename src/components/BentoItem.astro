---
interface Props {
    class?: string
    title: string,
    subtitle?: string
}

const { title, subtitle } = Astro.props;
---

<article class={`
    ${Astro.props.class}
    col-span-5
    relative rounded-xl
    backdrop-blur-md
    border border-black/10
    shadow-inner shadow-white/10
`} 
>
    <!-- ! AÃ±adir un fade in negro para que se vea el contenido -->
    <slot name="image"></slot>
    <div class="select-none flex flex-col gap-1 p-6 text-lg z-20 justify-end h-full">
        
        <h2 class="text-3xl font-semibold text-balance text-white mb-4">{title}</h2>
        {subtitle && <h3 class="text-3xl font-semibold text-sky-200/80 -mt-4 mb-4">{subtitle}</h3>} <!-- ! con esto indicamos que el subtitle solo se va a mostrar si no es nulo -->
        <slot name="content"></slot>
    </div>
</article>